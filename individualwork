def en_boyuk_sirala_ve_yerlesdir(matris):
  for i in range(len(matris)):
    en_boyuk=max(matris[i])
    matris[i][i]=en_boyuk
  return matris
  
  matris = [
    [1,8,3,4,5],
    [6,2,8,9,10],
    [11,12,7,14,15],
    [16,17,18,3,20],
    [21,22,23,24,5]
]
 
 
 
yenilenmis_matris=en_boyuk_sirala_ve_yerlesdir
print(yenilenmis_matris)
